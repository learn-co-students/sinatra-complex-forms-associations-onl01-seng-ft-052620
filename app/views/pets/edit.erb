<h1>Update Pet</h1>

<form method='POST' action='/pets/<%=@pet.id%>'>
<input id='hidden'type='hidden'name='_method'value='PATCH'>

<label>Name</label>
<br>
<input type='text' name='pet[name]' id='pet_name' value='<%=@pet.name%>'>

<h3>Existing Owners</h3>
<%@owners.each do |owner|%>
    <input type='radio' name='pet[owner_id]' id='<%=owner.id%>' value='<%=owner.id%>' <%='checked' if owner==@pet.owner%>><%=owner.name%><br>
<%end%>
<br>

<h3>New Owner</h3>
<input type='text' name='owner[name]' id='owner_name'>
<br><br>

<input type='submit' value='Update Pet'>

</form>
